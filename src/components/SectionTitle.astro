---
/**
 * SectionTitle component
 * Props: title (string) & optional subtitle
 */
interface Props {
  title: string;
  subtitle?: string;
}
const { title, subtitle } = Astro.props as Props;
---

<div class="text-center mb-10" data-aos="fade-up">
  <h2 class="text-3xl font-semibold text-gray-800 mb-2">{title}</h2>
  {subtitle && <p class="text-gray-600 max-w-xl mx-auto">{subtitle}</p>}
</div>
