---
/**
 * TreatmentCard component - Premium Design
 * Props: icon (string emoji or img path), title, description, price (optional)
 */
interface Props {
  icon: string;
  title: string;
  description: string;
  price?: string;
}

const { icon, title, description, price } = Astro.props as Props;
---

<div class="group relative bg-white rounded-3xl shadow-xl p-8 flex flex-col items-center text-center hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 border border-pink-100 overflow-hidden" data-aos="fade-up">
  <!-- Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-pink-50 via-white to-rose-50 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  <!-- Decorative Elements -->
  <div class="absolute -top-4 -right-4 w-20 h-20 bg-gradient-to-br from-pink-200/30 to-rose-200/30 rounded-full blur-xl group-hover:scale-150 transition-transform duration-700"></div>
  <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-gradient-to-br from-rose-200/20 to-pink-200/20 rounded-full blur-lg group-hover:scale-125 transition-transform duration-700"></div>
  
  <!-- Icon Container -->
  <div class="relative z-10 mb-6">
    <div class="w-20 h-20 bg-gradient-to-br from-pink-500 to-rose-500 rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-pink-500/25 group-hover:scale-110 transition-all duration-300">
      <slot name="icon">
        <span class="text-3xl text-white">{icon}</span>
      </slot>
    </div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 flex-1">
    <h3 class="font-heading text-2xl text-gray-800 mb-4 group-hover:text-pink-700 transition-colors">{title}</h3>
    <p class="text-gray-600 text-base leading-relaxed mb-6">{description}</p>
    
    {price && (
      <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-pink-100 to-rose-100 rounded-full border border-pink-200">
        <span class="text-pink-700 font-semibold text-sm">Desde {price}</span>
      </div>
    )}
  </div>
  
  <!-- Hover Effect Button -->
  <div class="relative z-10 mt-6 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-y-4 group-hover:translate-y-0">
    <button class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-pink-500 to-rose-500 text-white font-semibold rounded-full shadow-lg hover:shadow-pink-500/25 transition-all duration-300">
      <span>Más información</span>
      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </button>
  </div>
</div>
