---
/**
 * Hero component
 * Props:
 *  - title: string
 *  - subtitle: string (optional)
 *  - ctaText: string (optional)
 *  - ctaHref: string (optional)
 *  - bgImage: string (asset path or remote URL)
 */
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  bgImage: string;
}

const { title, subtitle, ctaText = '', ctaHref = '#', bgImage } = Astro.props as Props;
---

<section class="relative h-[80vh] min-h-[500px] flex flex-col justify-center items-center text-center overflow-hidden">
  <!-- Background -->
  <img src={bgImage} alt="" class="absolute inset-0 w-full h-full object-cover object-center opacity-50" loading="lazy" />
  <div class="absolute inset-0 bg-pink-100/60 mix-blend-multiply"></div>

  <!-- Content -->
  <div class="relative z-10 max-w-3xl px-6">
    <h1 class="text-4xl md:text-5xl font-bold text-pink-900 mb-4" data-aos="fade-down">{title}</h1>
    {subtitle && <p class="text-lg md:text-xl text-pink-800 mb-6" data-aos="fade-up" data-aos-delay="150">{subtitle}</p>}
    {ctaText && (
      <a href={ctaHref} class="bg-pink-500 hover:bg-pink-600 text-white font-semibold py-3 px-6 rounded-full shadow-md transition" data-aos="zoom-in" data-aos-delay="300">
        {ctaText}
      </a>
    )}
  </div>
</section>
