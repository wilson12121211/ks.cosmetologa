---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = await getCollection('blog');
---

<BaseLayout title="Blog de Bienestar - KS Cosmetóloga" description="Lee artículos útiles para cuidar tu piel, aprender sobre tratamientos y consejos de belleza.">
  <!-- Hero section -->
  <section class="relative overflow-hidden pt-32 pb-20 bg-gradient-to-br from-pink-50 via-white to-rose-50">
    <!-- Background blobs -->
    <div class="absolute -top-20 -left-20 w-96 h-96 bg-pink-200/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 -right-20 w-[28rem] h-[28rem] bg-rose-200/20 rounded-full blur-3xl"></div>

    <div class="relative z-10 max-w-4xl mx-auto text-center px-4" data-aos="fade-up">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
        <span class="bg-gradient-to-r from-pink-600 to-rose-600 bg-clip-text text-transparent">Blog</span> de Bienestar
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">Consejos, guías y novedades para que tu piel luzca radiante todos los días.</p>
    </div>
  </section>
  <section class="max-w-7xl mx-auto px-4 py-24">
    

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-10">
      {posts
        .sort((a,b)=> new Date(b.data.pubDate ?? '').getTime() - new Date(a.data.pubDate ?? '').getTime())
        .map((post, idx) => (
        <a
          href={`/blog/${post.slug}`}
          class="group block overflow-hidden rounded-3xl shadow-lg hover:shadow-xl transition-all"
        >
          <figure class="relative aspect-[4/3] overflow-hidden">
              <img src={post.data.heroImage ?? `https://picsum.photos/seed/${post.slug}/600/400.webp`} alt={post.data.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </figure>
            <div class="p-6 bg-white"> 
              <h2 class="text-lg font-bold text-gray-800 mb-2 group-hover:text-pink-700 transition-colors">
            {post.data.title}
          </h2>
          <p class="text-gray-600">{post.data.description}</p>
            </div>
         </a>
      ))}
    </div>
  </section>
</BaseLayout>
