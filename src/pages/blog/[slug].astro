      transition: all 0.3s ease;
    }
    
    .prose .bg-white:hover {
      transform: translateY(-2px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }
    
    /* Blockquotes */
    .prose blockquote {
      border-left: 4px solid #ec4899;
      background: linear-gradient(135deg, #fdf2f8, #f3e8ff);
      padding: 1.5rem;
      margin: 2rem 0;
      border-radius: 0.5rem;
      font-style: italic;
      position: relative;
    }
    
    .prose blockquote::before {
      content: 'â€œ';
      font-size: 4rem;
      color: #ec4899;
      position: absolute;
      top: -0.5rem;
      left: 1rem;
      opacity: 0.3;
    }
    
    /* Ajustes responsivos */
    @media (max-width: 768px) {
      .prose {
        font-size: 1rem;
      }
      
      .prose h1 {
        font-size: 1.875rem;
      }
      
      .prose h2 {
        font-size: 1.5rem;
      }
      
      .prose h3 {
        font-size: 1.25rem;
      }
      
      .prose img,
      .prose video {
        margin: 1rem 0;
      }
    }
    
    /* Animaciones */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .prose > * {
      animation: fadeInUp 0.6s ease-out;
    }
    
    /* Estilos para elementos colapsables */
    details summary {
      cursor: pointer;
      list-style: none;
      padding: 1rem;
      background: linear-gradient(135deg, #fdf2f8, #f3e8ff);
      border-radius: 0.5rem;
      font-weight: 600;
      color: #ec4899;
      transition: all 0.3s ease;
    }
    
    details summary:hover {
      background: linear-gradient(135deg, #fce7f3, #ede9fe);
      transform: translateY(-1px);
    }
    
    details[open] summary {
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
    }
    
    details > *:not(summary) {
      padding: 1rem;
      background: #fafafa;
      border-bottom-left-radius: 0.5rem;
      border-bottom-right-radius: 0.5rem;
    }
  </style>

  <script>
    // Funcionalidad responsiva para mÃ³viles
    document.addEventListener('DOMContentLoaded', () => {
      const handleResponsiveContent = () => {
        const isMobile = window.innerWidth <= 768;
        
        if (isMobile) {
          // Convertir secciones en acordeones en mÃ³vil
          document.querySelectorAll('.prose h2').forEach(h2 => {
            if (h2.closest('details')) return; // Ya procesado
            
            const details = document.createElement('details');
            details.className = 'mb-4 rounded-lg overflow-hidden';
            details.open = false;
            
            const summary = document.createElement('summary');
            summary.className = 'bg-gradient-to-r from-pink-100 to-purple-100 p-3 font-semibold text-pink-700 cursor-pointer hover:from-pink-200 hover:to-purple-200 transition-all';
            summary.textContent = h2.textContent;
            
            const content = document.createElement('div');
            content.className = 'p-4 bg-gray-50';
            
            details.appendChild(summary);
            details.appendChild(content);
            
            // Mover contenido siguiente al acordeÃ³n
            let sibling = h2.nextElementSibling;
            while (sibling && sibling.tagName !== 'H2' && sibling.tagName !== 'H1') {
              const next = sibling.nextElementSibling;
              content.appendChild(sibling);
              sibling = next;
            }
            
            h2.replaceWith(details);
          });
        } else {
          // Expandir todos los acordeones en desktop
          document.querySelectorAll('details').forEach(details => {
            details.open = true;
          });
        }
      };
      
      // Ejecutar al cargar y al redimensionar
      handleResponsiveContent();
      window.addEventListener('resize', handleResponsiveContent);
    });
  </script>

  <!-- Modal para medios -->
