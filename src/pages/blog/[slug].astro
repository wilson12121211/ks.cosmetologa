---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const posts = await getCollection('blog');
const { slug } = Astro.params;
const post = posts.find((p) => p.slug === slug);

if (!post) {
  throw new Error(`No se encontr√≥ el post con slug: ${slug}`);
}
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="max-w-3xl mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold text-pink-700 mb-4">{post.data.title}</h1>
    <p class="text-gray-500 text-sm mb-6">Publicado el {post.data.pubDate}</p>
    <div class="prose prose-pink max-w-none" set:html={post.body} />
  </article>
</BaseLayout>
